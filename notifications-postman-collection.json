        {
            "name": "Notification History",
            "item": [
                {
                    "name": "1. Get All Notifications",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/notifications?per_page=20&page=1",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "notifications"
                            ],
                            "query": [
                                {
                                    "key": "per_page",
                                    "value": "20"
                                },
                                {
                                    "key": "page",
                                    "value": "1"
                                }
                            ]
                        },
                        "description": "Get all user notifications (paginated)"
                    }
                },
                {
                    "name": "2. Get Latest Notifications",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/notifications/latest?limit=10",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "notifications",
                                "latest"
                            ],
                            "query": [
                                {
                                    "key": "limit",
                                    "value": "10"
                                }
                            ]
                        },
                        "description": "Get latest N notifications (default 10)"
