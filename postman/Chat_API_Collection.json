{
    "info": {
        "name": "Asalny - Chat API",
        "description": "Chat endpoints for real-time messaging between askers and answerers",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Chat",
            "item": [
                {
                    "name": "Create or Get Chat",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"order_id\": 1\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/chats",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "chats"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "List All Conversations",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/chats",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "chats"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get Chat Messages",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/chats/{{chat_id}}/messages",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "chats",
                                "{{chat_id}}",
                                "messages"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Send Message",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"message\": \"مرحباً، هل يمكنك المساعدة؟\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/chats/{{chat_id}}/messages",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "chats",
                                "{{chat_id}}",
                                "messages"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://127.0.0.1:8000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        },
        {
            "key": "chat_id",
            "value": "1",
            "type": "string"
        }
    ]
}